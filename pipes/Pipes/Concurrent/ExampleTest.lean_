-- Basic Input/Output types
structure Input (Î± : Type) where
  recv : BaseIO (Option Î±)

structure Output (Î± : Type) where
  send : Î± â†’ BaseIO Bool

-- Simple unbounded mailbox implementation using Promise
def createSimpleMailbox (Î± : Type) : BaseIO (Output Î± Ã— Input Î±) := do
  let queue â† IO.mkRef ([] : List Î±)
  let sealed â† IO.mkRef false
  let waitingReaders â† IO.mkRef ([] : List (IO.Promise (Option Î±)))

  let output : Output Î± := {
    send := fun value => do
      let isSealed â† sealed.get
      if isSealed then
        return false
      else do
        -- Add to queue and notify any waiting readers
        queue.modify (Â· ++ [value])
        let readers â† waitingReaders.get
        match readers with
        | [] => pure ()  -- No one waiting
        | promise :: rest => do
          waitingReaders.set rest
          promise.resolve (some value)
        return true
  }

  let input : Input Î± := {
    recv := do
      let isSealed â† sealed.get
      let currentQueue â† queue.get

      match currentQueue with
      | [] =>
        if isSealed then
          return none
        else do
          -- Wait for data
          let promise â† IO.Promise.new
          waitingReaders.modify (Â· ++ [promise])
          promise.result!.get
      | value :: rest => do
        queue.set rest
        return some value
  }

  return (output, input)

-- Test 1: Basic send/receive
def test1 : IO Unit := do
  IO.println "Test 1: Basic send/receive"
  let (output, input) â† createSimpleMailbox String

  -- Send a message
  let success â† output.send "Hello World"
  IO.println s!"Send success: {success}"

  -- Receive the message
  match â† input.recv with
  | none => IO.println "No message received"
  | some msg => IO.println s!"Received: {msg}"

  IO.println ""

-- Test 2: Producer/Consumer with async
def test2 : IO Unit := do
  IO.println "Test 2: Producer/Consumer"
  let (output, input) â† createSimpleMailbox Nat

  -- Producer task
  let producer â† IO.asTask do
    for i in List.range 5 do
      let success â† output.send i
      IO.println s!"Produced: {i} (success: {success})"
      IO.sleep 500
    IO.println "Producer finished"

  -- Consumer task
  let consumer â† IO.asTask do
    let rec loop : IO Unit := do
      match â† input.recv with
      | none =>
        IO.println "Consumer: No more data"
        return ()
      | some value => do
        IO.println s!"Consumed: {value}"
        loop
    loop

  -- Wait for both to complete
  let _ â† IO.wait producer
  let _ â† IO.wait consumer

  IO.println ""

-- Test 3: Multiple producers, single consumer
def test3 : IO Unit := do
  IO.println "Test 3: Multiple producers, single consumer"
  let (output, input) â† createSimpleMailbox String

  -- Producer 1
  let producer1 â† IO.asTask do
    for i in List.range 3 do
      let success â† output.send s!"P1-{i}"
      IO.println s!"Producer1 sent: P1-{i}"
      IO.sleep 300

  -- Producer 2
  let producer2 â† IO.asTask do
    for i in List.range 3 do
      let success â† output.send s!"P2-{i}"
      IO.println s!"Producer2 sent: P2-{i}"
      IO.sleep 400

  -- Consumer
  let consumer â† IO.asTask do
    for _ in List.range 6 do  -- Expect 6 messages total
      match â† input.recv with
      | none => IO.println "Unexpected end of stream"
      | some msg => IO.println s!"Consumer received: {msg}"

  -- Wait for all tasks
  let _ â† IO.wait producer1
  let _ â† IO.wait producer2
  let _ â† IO.wait consumer

  IO.println ""

-- Test 4: Broadcast (manual implementation)
def test4 : IO Unit := do
  IO.println "Test 4: Simple broadcast"
  let (output1, input1) â† createSimpleMailbox String
  let (output2, input2) â† createSimpleMailbox String

  -- Broadcast function
  let broadcast (msg : String) : IO Bool := do
    let success1 â† output1.send msg
    let success2 â† output2.send msg
    return (success1 && success2)

  -- Consumer 1
  let consumer1 â† IO.asTask do
    for _ in List.range 3 do
      match â† input1.recv with
      | none => return ()
      | some msg => IO.println s!"Consumer1: {msg}"

  -- Consumer 2
  let consumer2 â† IO.asTask do
    for _ in List.range 3 do
      match â† input2.recv with
      | none => return ()
      | some msg => IO.println s!"Consumer2: {msg}"

  -- Broadcast messages
  let messages := ["Hello", "World", "Broadcast"]
  for msg in messages do
    let success â† broadcast msg
    IO.println s!"Broadcasted: {msg} (success: {success})"
    IO.sleep 200

  let _ â† IO.wait consumer1
  let _ â† IO.wait consumer2

  IO.println ""

-- Simple interactive test
def interactiveTest : IO Unit := do
  IO.println "Test 5: Interactive test (type 'quit' to exit)"
  let (output, input) â† createSimpleMailbox String

  -- Consumer task
  let consumer â† IO.asTask do
    let rec loop : IO Unit := do
      match â† input.recv with
      | none => return ()
      | some msg =>
        if msg == "quit" then
          IO.println "Consumer: Received quit signal"
          return ()
        else do
          IO.println s!"Echo: {msg}"
          loop
    loop

  -- Producer (interactive)
  let rec inputLoop : IO Unit := do
    IO.print "Enter message: "
    let line â† (â† IO.getStdin).getLine
    let msg := line.trim
    let success â† output.send msg
    if msg != "quit" && success then
      inputLoop
    else
      IO.println "Input loop ended"

  -- Run producer and wait for consumer
  inputLoop
  let _ â† IO.wait consumer

  IO.println ""

